@model IDP_Back_End.Models.Task
@using IDP_Back_End.Models;
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<script src="./js/Auth.js"></script>
<div class="col-md-6">
    <form id="@Model.ID" asp-action="AddCommentToTask" asp-controller="Task" method="post">
        <input type="hidden" name="taskId" value="getUserName()" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.()" />
        <input type="hidden" name="userID" value="" />
        <input type="text" name="text" value="" />
        <span class="card-text p-1">
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>